<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="75dp"
    android:background="@drawable/border_corners_allside_withstroke"
    android:elevation="10dp"

        android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    android:layout_height="91dp">
    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/btn1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"

            android:layout_toRightOf="@+id/tv_edit"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"


            android:src="@drawable/ic_edit_post"
            app:tint="#474746" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingRight="0dp"
            android:textColor="#474746"
            android:text="@string/edit"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_del"


            app:tint="#474746"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_erase" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_centerInParent="true"

            android:gravity="center"
            android:paddingRight="0dp"
            android:text="@string/delete"
            android:textColor="#474746"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>