<?xml version="1.0" encoding="utf-8"?>
<com.example.ghostdiary.utilpackage.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ghost_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_ghost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:layout_weight="1"
        android:alpha="1"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ghost_00_verygood" />




</com.example.ghostdiary.utilpackage.SquareFrameLayout>


