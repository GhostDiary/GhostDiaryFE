<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"

    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/border"

    android:elevation="15dp"
    >

    <TextView
        android:id="@+id/tv_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:text="오늘의 감정유령"
        android:textColor="#757575"
        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_popup_text">


        <TextView
            android:id="@+id/select_emotion_verygood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ghost_00_verygood"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="매우 좋음"

            android:textColor="#757575"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/select_emotion_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center"
            android:text="좋음"
            android:textColor="#757575"
            android:scaleX="0.8"
            android:scaleY="0.8"

            android:drawableTop="@drawable/ghost_01_good"
            android:drawablePadding="4dp"
            />
        <TextView
            android:id="@+id/select_emotion_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:gravity="center"
            android:text="보통"
            android:textColor="#757575"

            android:drawableTop="@drawable/ghost_02_normal"
            android:drawablePadding="4dp"
            />
        <TextView
            android:id="@+id/select_emotion_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:gravity="center"
            android:text="나쁨"
            android:textColor="#757575"

            android:drawableTop="@drawable/ghost_03_bad"
            android:drawablePadding="4dp"
            />
        <TextView
            android:id="@+id/select_emotion_verybad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="매우나쁨"
            android:textColor="#757575"

            android:drawableTop="@drawable/ghost_04_verybad"
            android:drawablePadding="4dp"
            />






    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
