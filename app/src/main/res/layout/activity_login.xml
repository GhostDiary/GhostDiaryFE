<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kakao button -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_login_1"
            android:layout_width="204dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="아이디와 비밀번호 입력하기 귀찮으시죠? \n카카오로 1초 만에 로그인 하세요."
            android:textColor='@color/gray'
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_title" />

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-7sp"
            android:text="로그인"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:id="@+id/btn_login_kakao"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kakaobutton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loginline" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:id="@+id/input_login_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/border"
            android:hint="이메일 입력"
            android:fontFamily="@font/roboto_thin"
            android:textSize="16dp"

            android:layout_marginRight="16dp"
            />

        <EditText
            android:id="@+id/input_login_password"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/border"
            android:hint="비밀번호 입력"
            android:fontFamily="@font/roboto_thin"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/input_login_email" />

        <ImageView
            android:id="@+id/btn_login_email"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/input_login_password"
            app:srcCompat="@drawable/loginbutton" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"

            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_email">

            <TextView
                android:id="@+id/btn_login_findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/black2"

                android:text="비밀번호 찾기"
                android:fontFamily="@font/roboto_thin"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:id="@+id/line_1"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=" | "
                android:textColor="@color/black2"

                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"

                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_gravity="center"

                android:text="이메일로 회원가입"
                android:fontFamily="@font/roboto_thin"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|center_vertical"
                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/close"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        android:layout_marginBottom="21dp"
        app:layout_constraintStart_toStartOf="@+id/btn_login_kakao"
        tools:layout_editor_absoluteY="46dp" />
</androidx.constraintlayout.widget.ConstraintLayout>