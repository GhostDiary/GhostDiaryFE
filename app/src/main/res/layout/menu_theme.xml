<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:background="@drawable/border_corners_allside_withstroke"
    android:elevation="10dp"

        android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"

    android:layout_height="140dp">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"

            android:layout_toRightOf="@+id/tv_home"
            android:scaleType="fitCenter"


            android:src="@drawable/ic_theme_00_home"
            />


        <TextView
            android:id="@+id/tv_home"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="「THEME」"
            android:textColor="#474746"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_bright"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"

            android:layout_toRightOf="@+id/tv_bright"
            android:scaleType="fitCenter"


            android:src="@drawable/ic_theme_01_bright"
             />


        <TextView
            android:id="@+id/tv_bright"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="bright"
            android:textColor="#474746"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_dark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_dark"


            app:tint="#474746"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_theme_02_dark" />

        <TextView
            android:id="@+id/tv_dark"
            android:layout_width="90dp"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="dark"
            android:textColor="#474746"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_halloween"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_halloween"


            app:tint="#474746"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_theme_03_halloween" />

        <TextView
            android:id="@+id/tv_halloween"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="halloween"
            android:textColor="#474746"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>