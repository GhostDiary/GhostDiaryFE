<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"

            >

            <TableRow>

                <TableLayout
                    android:id="@+id/btn_analysis"
                    android:layout_width="0dp"
                    android:stretchColumns="*"

                    android:layout_margin="9dp"
                    android:background="@drawable/border_corners_allside"
                    android:elevation="4dp"
                    android:minHeight="123dp"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ghost_analysis"

                            />
                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|center"

                            android:text="분석"
                            android:textSize="15sp" />
                    </TableRow>




                </TableLayout>

                <TableLayout
                    android:id="@+id/btn_sleep"
                    android:layout_width="0dp"
                    android:stretchColumns="*"

                    android:layout_margin="9dp"
                    android:background="@drawable/border_corners_allside"
                    android:elevation="4dp"
                    android:minHeight="123dp"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ghost_sleep"

                            />
                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|center"

                            android:text="수면"
                            android:textSize="15sp" />
                    </TableRow>



                </TableLayout>
            </TableRow>

            <TableRow>
                <TableLayout
                    android:id="@+id/btn_advice"
                    android:layout_width="0dp"
                    android:stretchColumns="*"

                    android:layout_margin="9dp"
                    android:background="@drawable/border_corners_allside"
                    android:elevation="4dp"
                    android:minHeight="123dp"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ghost_advice"

                            />
                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|center"

                            android:text="조언"
                            android:textSize="15sp" />
                    </TableRow>




                </TableLayout>
            </TableRow>


        </TableLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>