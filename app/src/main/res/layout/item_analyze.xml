<?xml version="1.0" encoding="utf-8"?>
<com.example.ghostdiary.utilpackage.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ghost_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_ghost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:layout_weight="1"
        android:alpha="1"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ghost_00_verygood" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"

        android:layout_gravity="center|bottom"
        android:text="매우 좋음"

        >

    </TextView>




</com.example.ghostdiary.utilpackage.SquareFrameLayout>


