<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ghostdiary" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@color/gray</item>
        <item name="android:textSelectHandle">@color/gray</item>
        <item name="android:textSelectHandleLeft">@color/gray</item>
        <item name="android:textSelectHandleRight">@color/gray</item>
        <item name="android:textColorHighlight">@color/black_overlay</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.Ghostdiary.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>