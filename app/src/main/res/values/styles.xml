<resources>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="tabTextColor">#B2B2B2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="fontFamily">@font/custom_font_family</item>

    </style>

    <style name="AppThemeDialog" parent="Theme.Ghostdiary">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.5 </item>
        <item name="android:windowBackground">@color/transp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name= "background">@drawable/border_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:popupBackground">@drawable/border_white</item>

        <item name="popupMenuBackground">@drawable/border_white</item>
    </style>


    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog 가 센터에 나오도록 하자. -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">

        <item name="colorAccent">@color/pink</item>

    </style>

    <style name="Widget.Theme.Ghostdiary.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.Ghostdiary">
        <item name="colorControlNormal">@color/pink</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/pink</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/pink</item>
        <item name="colorControlHighlight">@color/pink</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/pink</item>
    </style>




        <!--    수면시간 선택 슬라이더-->
    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/pink</item>
        <item name="trackColorInactive">@color/gray</item>
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="tickColor">#333333</item>
        <item name="tickVisible">false</item>


        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/gray</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="fontFamily">@font/custom_font_family</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundTint">@color/pink</item>

    </style>

    <style name="sw_mainColor">
        <item name="colorControlActivated">@color/black</item>
        <item name="background">@color/white</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:colorForeground">@color/gray</item>
    </style>

    <style name="Myslider_other" parent="@style/Widget.MaterialComponents.Slider">
        <item name="trackColorActive">#8FCBCA</item>
        <item name="trackColorInactive">@color/gray</item>
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="tickColor">#333333</item>
        <item name="tickVisible">false</item>


        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

<!--    -->

    <style name="MyLockScreenStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@android:color/transparent</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="MyLockScreenButtonStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MyLockScreenFingerprintButtonStyle">
<!--        <item name="android:src">@drawable/fingerprint_icon</item>-->
    </style>

    <style name="MyLockScreenDeleteButtonStyle">
        <item name="android:src">@drawable/ic_deletebutton</item>
    </style>

    <style name="MyLockScreenCodeStyle">
        <item name="android:button">@drawable/codeselector</item>
        <item name="pf_code_view"></item>
    </style>

    <style name="MyLockNextButtonStyle">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_margin">40dp</item>
    </style>

    <style name="MyLockTitleStyle" parent="PFLockScreenTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="fontFamily">@font/custom_font_family</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyLockHintStyle">
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="fontFamily">@font/custom_font_family</item>
        <item name="android:textColor">#FFF</item>
    </style>


</resources>